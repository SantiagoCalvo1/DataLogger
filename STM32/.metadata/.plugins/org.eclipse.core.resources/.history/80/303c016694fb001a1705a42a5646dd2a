/* Private variables ---------------------------------------------------------*/
UART_HandleTypeDef huart2;

/* USER CODE BEGIN PV */
uint8_t rx_dato;
uint16_t delay;
uint8_t flag_cambio;
uint8_t flag_actual;
/* USER CODE END PV */

